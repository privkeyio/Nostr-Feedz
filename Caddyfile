nostrfeedz.com {
    # Reverse proxy to the Next.js app
    reverse_proxy app:3000 {
        # Health check
        health_uri /api/health
        health_interval 30s
        health_timeout 5s
    }

    # Enable compression
    encode gzip

    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Content Security Policy - allow YouTube and Rumble embeds
        Content-Security-Policy "frame-src 'self' https://www.youtube.com https://youtube.com https://www.youtube-nocookie.com https://rumble.com https://*.rumble.com; frame-ancestors 'self';"
        
        # Remove server information
        -Server
    }

    # Log to stdout
    log {
        output stdout
        format console
    }
}

# Redirect www to non-www
www.nostrfeedz.com {
    redir https://nostrfeedz.com{uri} permanent
}