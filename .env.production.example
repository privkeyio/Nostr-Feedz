# Production Environment Variables for Nostr-Feedz
# Copy this file to .env.production and fill in the values

# Database Configuration
DATABASE_URL="postgresql://nostr_user:nostr_password@postgres:5432/nostr_feedz"

# Application Environment
NODE_ENV="production"

# Nostr Configuration
DEFAULT_RELAYS="wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band,wss://relay.snort.social"
NOSTR_BUNKER_URL=""

# PayWithFlash Configuration
NEXT_PUBLIC_FLASH_CHECKOUT_URL=""  # Your Flash subscription checkout URL
FLASH_SUBSCRIPTION_KEY=""  # Your Flash subscription key for JWT verification

# Clerk Authentication (if using Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""

# Security
NEXTAUTH_SECRET=""  # Generate with: openssl rand -base64 32

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=""

# Optional: Error Tracking
SENTRY_DSN=""

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1